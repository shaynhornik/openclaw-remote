{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "composite": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist-plugin"
  },
  "include": ["src/plugin"]
}
